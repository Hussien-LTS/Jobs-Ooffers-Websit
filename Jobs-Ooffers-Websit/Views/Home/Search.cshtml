@model IEnumerable<Jobs_Ooffers_Websit.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <h1 class="panel-heading"> نتائج البحث </h1>
    <div class="row">
        @foreach (var subItem in Model)
        {
            <div class="col-md-4 thumbnail" style="margin-right: 2em;">
                <img src="~/Uploads/@subItem.JobImg" />
                <h3> @Html.DisplayFor(modelItem => subItem.JobTitle) </h3>
                <h5> @Html.DisplayFor(modelItem => subItem.JobContent) </h5>
                @Html.ActionLink("تفاصيل العمل ", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-primary" })
            </div>
        }

    </div>
</div>


